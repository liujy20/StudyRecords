.map {
  width: 100%;
  height: 300px;
}
.bg {
  min-height: 100vh;
  background-color: #f5f5f5;
  overflow: auto;
}
.bg .card1-body {
  text-align: right;
}
.bg .card2-head {
  font-weight: bold;
}
.bg .card2-body .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bg .card2-body .info .name {
  width: 200rpx;
}
.bg .card2-body .info .phone {
  width: 200rpx;
}
.bg .card2-body .info .tag {
  width: 100rpx;
}
.bg .card2-body .address {
  display: flex;
  justify-content: space-between;
  color: #999;
  line-height: 100rpx;
}
.bg .card2-body .address-sub {
  display: flex;
  justify-content: space-between;
  color: #999;
  line-height: 100rpx;
}
.bg .card2-body .address-sub .info {
  width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bg .card2-body .address-sub .icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 1;
  font-size: 24rpx;
  color: red;
}
.bg .card2-body .company {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.bg .card2-body .def-address {
  display: flex;
  color: #999;
  line-height: 100rpx;
}
.bg .card2-body .def-address .tit {
  flex-grow: 1;
}

