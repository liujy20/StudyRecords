.bg {
  background-color: #f5f5f5;
  height: 100vh;
}
.bg .tit-bg {
  background-color: #1cb3fb;
  padding: 40rpx 30rpx 110rpx;
  display: flex;
  justify-content: space-between;
}
.bg .tit-bg .con {
  color: white;
}
.bg .tit-bg .con .tit {
  font-size: 34rpx;
}
.bg .tit-bg .con .info {
  font-size: 26rpx;
}
.bg .tit-bg image {
  width: 110rpx;
  height: 110rpx;
}
.bg .wrap {
  position: relative;
  margin-top: -100rpx;
}
.bg .wrap .tits {
  margin: 30rpx;
  margin-bottom: 0;
  padding: 30rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.bg .wrap .tits .tit {
  padding-bottom: 20rpx;
}
.bg .wrap .con {
  margin: 30rpx;
  margin-top: 0;
  padding: 20rpx 0;
}
.bg .wrap .con .top {
  background-color: white;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 1rpx;
}
.bg .wrap .con .top .status {
  color: red;
}
.bg .wrap .con .bottom .item .main {
  display: flex;
  padding: 20rpx;
  background-color: white;
}
.bg .wrap .con .bottom .item .main image {
  width: 120rpx;
  height: 120rpx;
}
.bg .wrap .con .bottom .item .main .info {
  flex-grow: 1;
}
.bg .wrap .con .bottom .item .main .info text {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 380rpx;
}
.bg .wrap .con .bottom .item .main .num {
  color: #ccc;
  text-align: right;
}
.bg .wrap .con .bottom .item .all {
  margin-bottom: 1rpx;
  padding: 0 20rpx 30rpx 0;
  text-align: right;
  background-color: white;
}
.bg .wrap .con .bottom .item .all .all-price {
  color: red;
}
.bg .wrap .con .bottom .item .more {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
  background-color: white;
}
.bg .wrap .con .bottom .item .more .btn {
  width: 175rpx;
  height: 55rpx;
  background-color: #1cb3fb;
  line-height: 55rpx;
  border-radius: 27rpx;
  color: white;
  text-align: center;
}

