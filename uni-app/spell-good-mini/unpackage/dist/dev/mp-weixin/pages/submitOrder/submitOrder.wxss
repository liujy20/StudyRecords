.bg {
  background-color: #f5f5f5;
  overflow: auto;
  padding-bottom: 200rpx;
}
.bg .address {
  height: 170rpx;
  background: linear-gradient(to bottom, #1cb3fb, #f5f5f5);
  overflow: hidden;
}
.bg .address .content {
  margin: 10rpx 20rpx;
  padding: 30rpx 30rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bg .address .content .item-left .user {
  display: flex;
  font-weight: bold;
  font-size: 30rpx;
  margin: 10rpx;
}
.bg .address .content .item-left .sub {
  font-size: 24rpx;
}
.bg .address .content .item-left .sub .tag {
  color: #1cb3fb;
}
.bg .address .content .item-right image {
  width: 15rpx;
  height: 30rpx;
}
.bg .goodsNum {
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  background-color: white;
}
.bg .good {
  margin: 1rpx 0 10rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: white;
}
.bg .good image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 10rpx;
}
.bg .good .info {
  flex-grow: 1;
  width: 450rpx;
}
.bg .good .info .name {
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bg .good .info .tag {
  font-size: 16rpx;
  margin: 20rpx 0;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bg .good .info .price {
  font-size: 20rpx;
  color: red;
}
.bg .good .num {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #999;
}
.bg .com {
  margin-top: 1rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height: 90rpx;
  color: #999;
  background-color: white;
}
.bg .com .tag {
  color: #333;
  font-weight: bold;
  flex-grow: 1;
}
.bg .com image {
  margin-left: 20rpx;
  width: 15rpx;
  height: 30rpx;
}
.bg .integral .num {
  margin-right: 10rpx;
  color: red;
}
.bg .note {
  margin-top: 1rpx;
  padding: 30rpx;
  padding-right: 0;
  background-color: white;
}
.bg .note .tit {
  font-size: 28rpx;
  font-weight: bold;
  margin: 0 0 30rpx;
}
.bg .note textarea {
  height: 150rpx;
  background-color: #f5f5f5;
  padding: 30rpx;
}
.bg .res {
  margin-top: 10rpx;
  background-color: white;
  padding: 0 30rpx;
  overflow: hidden;
}
.bg .res .item {
  margin: 30rpx 0;
  display: flex;
}
.bg .res .item .tit {
  flex-grow: 1;
  font-weight: bold;
}
.bg .res .item .num {
  color: #999;
}
.bg .all {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  padding: 0 30rpx;
  background-color: white;
  display: flex;
  align-items: center;
  background-color: white;
  box-sizing: border-box;
}
.bg .all .price {
  color: red;
  flex-grow: 1;
}
.bg .all .pay {
  width: 240rpx;
  height: 70rpx;
  background-color: #1cb3fb;
  color: white;
  border-radius: 35rpx;
  line-height: 70rpx;
  text-align: center;
}
.bg .top {
  position: fixed;
  bottom: 300rpx;
  right: 30rpx;
  background-color: #1cb3fb;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

