.bg {
  height: 100vh;
  background-color: #f5f5f5;
}
.user-bg {
  background-color: #1cb3fb;
  height: 380rpx;
  overflow: hidden;
}
.user-bg .content {
  margin: 20rpx;
  overflow: hidden;
}
.user-bg .content .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.user-bg .content .top .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-bg .content .top .info {
  margin-left: 40rpx;
  color: white;
  flex-grow: 1;
}
.user-bg .content .top .sign-out {
  margin-right: 80rpx;
  width: 30rpx;
  height: 30rpx;
}
.user-bg .content .bottom {
  display: flex;
  justify-content: space-around;
  color: white;
}
.user-bg .content .bottom .item {
  text-align: center;
}
.user-bg .content .bottom .item .count {
  font-weight: bold;
  font-size: 30rpx;
}
.user-bg .content .bottom .item .tit {
  font-size: 24rpx;
  font-weight: 100;
}
.order {
  position: relative;
  background-color: white;
  margin: 20rpx;
  margin-top: -80rpx;
  padding: 40rpx 40rpx 25rpx;
  border-radius: 10rpx;
}
.order .tit {
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}
.order .tit .main {
  font-size: 34rpx;
  font-weight: bold;
}
.order .tit .more {
  font-size: 22rpx;
  color: #ccc;
}
.order .content {
  display: flex;
  justify-content: space-around;
}
.order .content .item {
  text-align: center;
}
.order .content .item image {
  width: 45rpx;
  height: 45rpx;
}
.order .content .item .name {
  font-size: 20rpx;
}

