.content {
  background-color: #f5f5f5;
  overflow: hidden;
}
.content .module-swiper {
  width: 690rpx;
  width: 100%;
}
.content .module-swiper .swiper {
  height: 300rpx;
  margin: 20rpx;
}
.content .module-swiper .swiper .swiper-item {
  display: block;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}
.content .module-swiper .swiper .swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.content .module {
  margin: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 20rpx;
}
.content .module-nav .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content .module-nav .item image {
  width: 100rpx;
  height: 100rpx;
}
.content .module-spell {
  flex-direction: column;
}
.content .module-spell .title {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.content .module-spell .title .tit {
  font-weight: 600;
}
.content .module-spell .content {
  padding: 10rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.content .module-spell .content .item {
  padding-top: 20rpx;
  width: 200rpx;
  box-shadow: 0 0 14rpx #ccc;
  border-radius: 10rpx;
  overflow: hidden;
}
.content .module-spell .content .item image {
  width: 200rpx;
  height: 200rpx;
}
.content .module-spell .content .item .name {
  padding-left: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
}
.content .module-spell .content .item .price {
  padding-left: 10rpx;
  color: #007aff;
  font-size: 25rpx;
  margin: 10rpx;
}
.content .module-spell .content .item .join {
  text-align: center;
  background-color: #007aff;
  color: #fff;
  font-size: 25rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.content .type {
  display: flex;
  justify-content: space-around;
  margin: 20rpx;
  padding: 20rpx;
}
.content .type .item .l-tit {
  font-weight: 600;
}
.content .type .item .s-tit {
  text-align: center;
  margin: 20rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  padding: 0 10rpx;
  border-radius: 10rpx;
  color: #ccc;
}
.content .type .active {
  color: #1cb3fb;
}
.content .type .active .s-tit {
  color: #fff;
  background-color: #1cb3fb;
}
.content .goods {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 20rpx;
}
.content .goods .item {
  margin: 10rpx 0;
  padding: 0 0 20rpx;
  background-color: #fff;
  width: 340rpx;
  border-radius: 10rpx;
}
.content .goods .item image {
  width: 340rpx;
  height: 340rpx;
}
.content .goods .item .name {
  width: calc(100% - 20rpx);
  margin-top: 20rpx;
  padding-left: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .goods .item .old {
  color: #ccc;
  font-size: 20rpx;
  text-decoration: line-through;
  margin-top: 20rpx;
  padding-left: 20rpx;
}
.content .goods .item .new {
  margin-top: 20rpx;
  padding-left: 20rpx;
  color: #f24e14;
}

